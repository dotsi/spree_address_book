<% if Spree::Config[:company] %>
	<div class="row mb10">
	    <div class="">
	    	<%= address_form.label :company, t(:company), :class => 'right inline' %></span>
	    </div>
	    <div class="">
	    	<%= address_form.text_field :company %>
            <span class="i di showOnLTELandscape">Vnesite ime podjetja. Ime za dostavo lahko spremenite ob naročilu.</span>
	    </div>
	</div>	
<% end %>
<div class="row mb10">
    <div class="">
    	<%= address_form.label :firstname, t(:first_name), :class => 'right inline' %><span class="required">*</span>
    </div>
    <div class="">
    	<%= address_form.text_field :firstname, :class => 'required' %>
        <span class="i di showOnLTELandscape">Vnesite svoje ime. Ime za dostavo lahko spremenite ob naročilu.</span>
    </div>
</div>
<div class="row mb10">
    <div class="">
    	<%= address_form.label :lastname, t(:last_name), :class => 'right inline' %><span class="required">*</span>
    </div>
    <div class="">
    	<%= address_form.text_field :lastname, :class => 'required' %>
        <span class="i di showOnLTELandscape">Vnesite svoj priimek. Priimek za dostavo lahko spremenite ob naročilu.</span>
    </div>
</div>
<div class="row mb10">
    <div class="">
    	<%= address_form.label :address1, t(:street_address), :class => 'right inline' %><span class="required">*</span>
    </div>
    <div class="">
    	<%= address_form.text_field :address1, :class => 'required' %>
        <span class="i di showOnLTELandscape">Vnesite ulico in hišno številko vašega glavnega naslova. Naslov za dostavo lahko urejate ob vsakem naročilu.</span>
    </div>
</div>

<div class="row mb10">
    
    <div class="">
        <div class="">
            <%= address_form.label :zipcode, t(:zip) + ' in ' + t(:city), :class => 'right inline' %><span class="required">*</span>
        </div>
        <div>
            <%= address_form.text_field :zipcode, :class => 'required zipcode mr10', :style => 'width:30px;' %>
            <%= address_form.text_field :city, :class => 'required city waOnLTELandscape', :size => '19' %>
            <span class="i di showOnLTELandscape">Vnesite kraj in poštno številko vašega glavnega naslova. Naslov za dostavo lahko urejate ob vsakem naročilu.</span>
        </div>
    
    </div>
</div>										

<% if Spree::Config[:address_requires_state] %>
	<div class="row mb10">
	    <div class="">
	    	<%= address_form.label :state, t(:state), :class => 'right inline' %><span class="required">*</span>
	    </div>
	    <div class="">
	    	<% have_states = !@order.bill_address.country.states.empty? %>
			<%= address_form.label :state, t(:state) %><span class="required">*</span>
			<br />
			<% state_elements = [address_form.collection_select(:state_id, @order.bill_address.country.states,  :id, :name, {:include_blank => true}, {:class => have_states ? 'required' : 'hidden', :disabled => !have_states}) +  address_form.text_field(:state_name, :class => !have_states ? 'required' : 'hidden', :disabled => have_states)].join.gsub('"', "'").gsub("\n", "") %>
			<%= javascript_tag do -%>
				document.write("<%== state_elements %>");
			<% end -%>
            <span class="i di showOnLTELandscape">tu pride razlaga zakaj potrebujemo podatek o državi</span>
	    </div>
	</div>	
	<noscript>
		<%= address_form.text_field :state_name, :class => 'required' %>
        <span class="i di showOnLTELandscape">tu pride razlaga zakaj potrebujemo podatek o državi</span>
	</noscript>
<% end %>
<div class="row mb10 dn">
    <div class="">
    	<%= address_form.label :country_id, t(:country), :class => 'right inline' %><span class="required">*</span>
    </div>
    <div class="">
    	<span id="<%= address_name[0] %>country"> <%= address_form.collection_select :country_id, available_countries, :id, :name, {}, {:class => 'required'} %> </span>
        <span class="i di showOnLTELandscape">tu pride razlaga zakaj potrebujemo podatek o državi</span>
    </div>
</div>	
<div class="row mb10">
    <div class="">
    	<%= address_form.label :phone, t(:phone), :class => 'right inline' %><span class="required">*</span>
    </div>
    <div class="">
    	<%= address_form.phone_field :phone, :class => 'required phone' %>
        <span class="i di showOnLTELandscape">Ob prvem naročilu bomo vaše podatke preverili po telefonu. Vnesite številko na kateri ste vedno dosegljivi.</span>
    </div>
</div>	
<% if Spree::Config["alternative_#{address_name[0] == 'b' ? 'billing' : 'shipping'}_phone"] %>
	<div class="row mb10">
	    <div class="">
	    	<%= address_form.label :alternative_phone, t(:alternative_phone), :class => 'right inline' %><span class="required">*</span>
	    </div>
	    <div class="">
	    	<%= address_form.phone_field :alternative_phone, :class => 'required phone' %>
            <span class="i di showOnLTELandscape">tu pride razlaga zakaj potrebujemo telefonsko številko (alt)</span>
	    </div>
	</div>	
<% end %>